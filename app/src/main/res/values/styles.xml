<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name ="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding4</item>
        <item name="android:paddingLeft">@dimen/padding16</item>
        <item name="android:paddingTop">@dimen/padding12</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dateTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding4</item>
        <item name="android:paddingRight">@dimen/padding16</item>
        <item name="android:paddingTop">@dimen/padding12</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <style name="sectionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>

</resources>
